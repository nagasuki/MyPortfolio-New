<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPortfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/animejs/lib/anime.iife.min.js"></script>
</head>
<body>
    <div class="main-wrapper d-flex" style="min-height: 100vh; position:relative; background: #181818;">
        <header>
            <aside>
                <!-- Sidebar -->
                <nav id ="sidebar" class="sidebar navbar-collapse d-flex flex-column justify-content-between align-items-center p-4">
                    <div>
                        <a class="navbar-brand mb-2 mx-4 text-white" asp-area="" asp-controller="Home" asp-action="Index">
                            <div class="logo mb-auto text-center">
                                <span class="text-md-center first-child">N</span><br />
                                <span class="text-white fw-bold">Nail</span><br />
                                <span class="text-secondary small">Game Developer</span>
                            </div>
                        </a>
                        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                            <li class="nav-item middleLeft">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["action"] as string == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item middleLeft">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["action"] as string == "ResumeAndCV" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="ResumeAndCV">Resume</a>
                            </li>
                            <li class="nav-item middleLeft">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["action"] as string == "Portfolio" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                            </li>
                            <li class="nav-item middleLeft">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["action"] as string == "Contract" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Contract">Contract</a>
                            </li>
                        </ul>
                    </div>
                    <footer class="text-muted">
                        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                            &copy; 2025 - Nail Portfolio
                        </div>
                    </footer>
                </nav>
            </aside>
        </header>

        <div class="container">
            <main role="main" class="">
                @RenderBody()
                <button id="backToTopBtn" class="back-to-top" title="Go to top">
                    <i class="bi bi-arrow-up-short"></i>
                </button>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const { animate } = anime;
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
